@inject CNHSystemService _sys
@inject NavigationManager _navi

<div class="SystemContextMenu">
 <div class="TopBarContextMenuItems" >
  <div id="Logout" class="ContextMenuButton" @onclick="Logout">
    Exit
   </div>
  </div>
</div>

@code {
 private async Task Logout()
 {
  _sys.SYSURL = null;
  _sys.CURRENTSESSION = null;
  _navi.NavigateTo("/", true);
 }
}
